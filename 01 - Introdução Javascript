// Introdução ao JavaScript
// Esse código mostra os conceitos básicos da linguagem de forma simples.

// 1. Declaração de variáveis
let nome = "Arthur"; // 'let' permite criar variáveis que podem mudar
const idade = 16;    // 'const' cria variáveis que não mudam

// 2. Tipos de dados
let numero = 10;           // Número
let texto = "Olá mundo";   // String (texto)
let verdadeiro = true;     // Booleano (true ou false)
let lista = [1, 2, 3];      // Array (lista de valores)
let objeto = { nome: "Arthur", idade: 16 }; // Objeto (estrutura com chave e valor)

// 3. Operadores
let soma = numero + 5;     // Adição
let subtracao = numero - 2; // Subtração
let multiplicacao = numero * 3; // Multiplicação
let divisao = numero / 2;  // Divisão

// 4. Condicional (if/else)
if (idade >= 18) {
  console.log("Você é maior de idade.");
} else {
  console.log("Você é menor de idade.");
}

// 5. Laço de repetição (for)
// Executa um número definido de vezes, baseado em uma condição de início, fim e incremento
for (let i = 0; i < lista.length; i++) {
  console.log("Item da lista:", lista[i]);
}

// 6. Laço de repetição (while)
// Executa enquanto a condição for verdadeira
let contador = 0;
while (contador < 3) {
  console.log("Contador com while:", contador);
  contador++;
}

// 7. Laço de repetição (do...while)
// Executa pelo menos uma vez, mesmo que a condição seja falsa
let tentativa = 0;
do {
  console.log("Tentativa com do...while:", tentativa);
  tentativa++;
} while (tentativa < 3);

// 8. Função
function saudacao(nome) {
  return "Olá, " + nome + "!";
}

console.log(saudacao("Arthur"));

// 9. Manipulação de DOM (se estiver num HTML)
document.body.style.backgroundColor = "black"; // Muda a cor de fundo da página

// 10. Eventos (interação com usuário)
document.addEventListener("click", function () {
  alert("Você clicou na página!");
});
